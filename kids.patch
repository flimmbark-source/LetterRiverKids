+export class AdaptiveScheduler {
+  constructor(options = {}) {
+    const { initialIntervalHours = 1, maxIntervalDays = 14 } = options;
+    this.initialIntervalMs = initialIntervalHours * 60 * 60 * 1000;
+    this.maxIntervalMs = maxIntervalDays * 24 * 60 * 60 * 1000;
+    this.items = {};
+  }
+
+  recordResult(itemId, correct) {
+    const now = Date.now();
+    if (!this.items[itemId]) {
+      this.items[itemId] = {
+        intervalMs: this.initialIntervalMs,
+        due: now + this.initialIntervalMs,
+        lastCorrect: correct,
+      };
+      return;
+    }
+
+    const record = this.items[itemId];
+    record.intervalMs = correct
+      ? Math.min(record.intervalMs * 2, this.maxIntervalMs)
+      : this.initialIntervalMs;
+    record.lastCorrect = correct;
+    record.due = now + record.intervalMs;
+  }
+
+  getDueItems(allItemIds) {
+    const now = Date.now();
+    return allItemIds
+      .filter((id) => !this.items[id] || this.items[id].due <= now)
+      .sort((a, b) => (this.items[a]?.due ?? 0) - (this.items[b]?.due ?? 0));
+  }
+
+  serialize() {
+    return JSON.stringify({ items: this.items });
+  }
+
+  static deserialize(json, options = {}) {
+    try {
+      const data = JSON.parse(json);
+      const scheduler = new AdaptiveScheduler(options);
+      scheduler.items = data.items || {};
+      return scheduler;
+    } catch {
+      return new AdaptiveScheduler(options);
+    }
+  }
+}
+
+export default AdaptiveScheduler;
