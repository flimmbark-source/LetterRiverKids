+import React, { createContext, useContext, useEffect, useState, useCallback } from 'react';
+
+const StickerRewardContext = createContext(null);
+
+export function useStickerRewards() {
+  return useContext(StickerRewardContext);
+}
+
+export function StickerRewardProvider({ children, availableStickers }) {
+  const [unlocked, setUnlocked] = useState(() => {
+    try {
+      const json = window.localStorage.getItem('kidsStickers');
+      return json ? JSON.parse(json) : [];
+    } catch {
+      return [];
+    }
+  });
+
+  useEffect(() => {
+    window.localStorage.setItem('kidsStickers', JSON.stringify(unlocked));
+  }, [unlocked]);
+
+  const isUnlocked = useCallback((id) => unlocked.includes(id), [unlocked]);
+
+  const unlockSticker = useCallback(() => {
+    const remaining = availableStickers.filter((s) => !unlocked.includes(s));
+    if (remaining.length === 0) return null;
+    const id = remaining[Math.floor(Math.random() * remaining.length)];
+    setUnlocked((prev) => [...prev, id]);
+    return id;
+  }, [availableStickers, unlocked]);
+
+  const resetStickers = useCallback(() => setUnlocked([]), []);
+
+  return (
+    <StickerRewardContext.Provider value={{ unlocked, isUnlocked, unlockSticker, resetStickers }}>
+      {children}
+    </StickerRewardContext.Provider>
+  );
+}
