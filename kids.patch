+import { useKidsProgress } from './context/KidsProgressContext.jsx';
+import { useStickerRewards } from './context/StickerRewardContext.jsx';
+import { letters } from '../lib/letters.js';
+
+export default function GameKids() {
+  const { dueItems, recordResult } = useKidsProgress();
+  const { unlockSticker } = useStickerRewards();
+  const [currentId, setCurrentId] = useState(null);
+  const [options, setOptions] = useState([]);
+  const [showResult, setShowResult] = useState(null);
+
+  const selectNext = useCallback(() => {
+    const allIds = letters.map((l) => l.id);
+    const due = dueItems(allIds);
+    const next =
+      due.length > 0 ? due[0] : allIds[Math.floor(Math.random() * allIds.length)];
+
+    setCurrentId(next);
+    const others = allIds.filter((id) => id !== next).sort(() => 0.5 - Math.random());
+    const picks = [next, others[0], others[1]].sort(() => 0.5 - Math.random());
+    setOptions(picks);
+    setShowResult(null);
+  }, [dueItems]);
+
+  useEffect(() => {
+    selectNext();
+  }, [selectNext]);
+
+  useEffect(() => {
+    if (!currentId) return;
+    const letter = letters.find((l) => l.id === currentId);
+    if (!letter) return;
+    ttsService.speakSmart({
+      nativeText: letter.sound,
+      nativeLocale: 'en-US',
+      transliteration: letter.sound,
+    });
+  }, [currentId]);
+
+  const handleSelect = (choiceId) => {
+    const correct = choiceId === currentId;
+    recordResult(currentId, correct);
+    setShowResult(correct ? 'correct' : 'incorrect');
+    if (correct) unlockSticker();
+    setTimeout(() => selectNext(), 900);
+  };
+
+  if (!currentId) return null;
+  const currentLetter = letters.find((l) => l.id === currentId);
+
+  return (
+    <div className="flex flex-col items-center justify-center p-4 gap-4">
+      <h1 className="text-2xl font-extrabold">Letter River Kids</h1>
+      <div className="text-6xl" aria-label="target-letter">
+        {currentLetter.display}
+      </div>
+
+      <button
+        type="button"
+        onClick={() =>
+          ttsService.speakSmart({
+            nativeText: currentLetter.sound,
+            nativeLocale: 'en-US',
+            transliteration: currentLetter.sound,
+          })
+        }
+        className="rounded-xl px-4 py-2 bg-blue-100 border border-blue-300 font-semibold"
+      >
+        üîä Hear it again
+      </button>
+
+      <div className="grid grid-cols-3 gap-4">
+        {options.map((id) => {
+          const letter = letters.find((l) => l.id === id);
+          return (
+            <button
+              key={id}
+              onClick={() => handleSelect(id)}
+              className="flex flex-col items-center justify-center p-4 rounded-xl border-4 border-blue-200 bg-blue-50 text-4xl shadow-lg"
+              style={{ minWidth: '80px', minHeight: '80px' }}
+              aria-label={letter.word}
+            >
+              <span role="img" aria-label={letter.word}>
+                {letter.emoji}
+              </span>
+            </button>
+          );
+        })}
+      </div>
+
+      {showResult && (
+        <div className={`text-xl font-bold ${showResult === 'correct' ? 'text-green-600' : 'text-red-600'}`}>
+          {showResult === 'correct' ? '‚úÖ Great job!' : '‚ùå Try again!'}
+        </div>
+      )}
+    </div>
+  );
+}
