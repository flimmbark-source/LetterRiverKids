+import React, { createContext, useContext, useEffect, useState, useCallback } from 'react';
+import AdaptiveScheduler from './AdaptiveScheduler.js';
+
+const KidsProgressContext = createContext(null);
+
+export function useKidsProgress() {
+  return useContext(KidsProgressContext);
+}
+
+export function KidsProgressProvider({ children, allItems }) {
+  const [scheduler, setScheduler] = useState(() => {
+    const saved = window.localStorage.getItem('kidsScheduler');
+    return AdaptiveScheduler.deserialize(saved || undefined);
+  });
+
+  const [stats, setStats] = useState(() => {
+    try {
+      const json = window.localStorage.getItem('kidsStats');
+      return json ? JSON.parse(json) : {};
+    } catch {
+      return {};
+    }
+  });
+
+  useEffect(() => {
+    window.localStorage.setItem('kidsScheduler', scheduler.serialize());
+  }, [scheduler]);
+
+  useEffect(() => {
+    window.localStorage.setItem('kidsStats', JSON.stringify(stats));
+  }, [stats]);
+
+  const recordResult = useCallback((itemId, correct) => {
+    setScheduler((prev) => {
+      const next = AdaptiveScheduler.deserialize(prev.serialize());
+      next.recordResult(itemId, correct);
+      return next;
+    });
+
+    setStats((prev) => {
+      const next = { ...prev };
+      if (!next[itemId]) next[itemId] = { attempts: 0, successes: 0 };
+      next[itemId].attempts += 1;
+      if (correct) next[itemId].successes += 1;
+      return next;
+    });
+  }, []);
+
+  const dueItems = useCallback(
+    (overrideItems) => scheduler.getDueItems(overrideItems || allItems || []),
+    [scheduler, allItems]
+  );
+
+  const resetProgress = useCallback(() => {
+    setScheduler(new AdaptiveScheduler());
+    setStats({});
+    window.localStorage.removeItem('kidsScheduler');
+    window.localStorage.removeItem('kidsStats');
+  }, []);
+
+  return (
+    <KidsProgressContext.Provider value={{ stats, dueItems, recordResult, resetProgress }}>
+      {children}
+    </KidsProgressContext.Provider>
+  );
+}
